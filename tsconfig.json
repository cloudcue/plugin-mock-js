{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "bundler",

    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "declaration": false,
    "sourceMap": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "outDir": "./dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
